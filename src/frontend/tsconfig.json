{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "react",
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "public"]
}
